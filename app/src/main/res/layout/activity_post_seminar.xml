<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BCFFDE69"
    android:scrollbars="vertical"
    tools:context=".PostSeminarActivity">

    <ScrollView
        android:id="@+id/scroll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:onClick="toPost"
                android:src="@drawable/ic_baseline_arrow_back_ios_24" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/risque"
                android:text="Post Your Event"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="34sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="76dp"
                android:layout_height="52dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                app:srcCompat="@drawable/ic_baseline_add_a_photo_50" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditText"
                android:layout_width="356dp"
                android:layout_height="51dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/border"
                android:hint="Nama Event" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText3"
                android:layout_width="356dp"
                android:layout_height="51dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:hint="Deskripsi" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tgl_pelaksanaan"
                android:layout_width="356dp"
                android:layout_height="51dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:drawableEnd="@drawable/ic_baseline_calendar_today_24"
                android:ems="10"
                android:hint="Tanggal Pelaksanaan"
                android:inputType="date" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tgl_dl"
                android:layout_width="356dp"
                android:layout_height="51dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:drawableEnd="@drawable/ic_baseline_calendar_today_24"
                android:hint="Deadline Pendaftaran" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/waktu"
                android:layout_width="356dp"
                android:layout_height="51dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:drawableEnd="@drawable/ic_baseline_access_time_24"
                android:hint="Waktu Pelaksanaan" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText7"
                android:layout_width="356dp"
                android:layout_height="51dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:hint="Benefit" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText8"
                android:layout_width="356dp"
                android:layout_height="51dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:hint="Persyaratan" />

            <RadioGroup
                android:layout_width="165dp"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/radioButtonGratis"
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:text="Gratis" />

                <RadioButton
                    android:id="@+id/radioButtonBerbayar"
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:text="Berbayar" />

            </RadioGroup>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText9"
                android:layout_width="356dp"
                android:layout_height="51dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:hint="Harga" />

            <Spinner
                android:id="@+id/Kategori"
                android:layout_width="356dp"
                android:layout_height="51dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:autofillHints="Kategori Event"
                android:background="@drawable/border"
                android:entries="@array/dropdown_kategori" />

            <TextView
                android:layout_width="356dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Lokasi Seminar "
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/pilihLokasi"
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:backgroundTint="#4A4949"
                android:onClick="toMaps"
                android:text="Pilih Lokasi"
                android:textColor="#FFFFFF" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText10"
                android:layout_width="356dp"
                android:layout_height="51dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:hint="Link Pendaftaran" />


            <!--            <com.google.android.gms.maps.MapView-->
            <!--                android:id="@+id/loc"-->
            <!--                android:layout_width="356dp"-->
            <!--                android:layout_height="200dp"-->
            <!--                android:layout_gravity="center_horizontal"-->
            <!--                android:apiKey="@string/app_name"-->
            <!--                android:onClick="toMaps"-->
            <!--                tools:ignore="OnClick" />-->

            <Button
                android:id="@+id/PostButton1"
                android:layout_width="356dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:backgroundTint="#050522"
                android:text="Post"
                android:textColor="#FFFFFF"
                app:cornerRadius="20dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>