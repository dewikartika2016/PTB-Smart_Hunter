<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BCFFDE69"
    android:textAlignment="center"
    tools:context=".FavoriteActivity">

    <Button
        android:id="@+id/buttonRegist"
        android:layout_width="208dp"
        android:layout_height="61dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#050522"
        android:text="Register"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkedTextWirausaha" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Silahkan pilih kategori yang disukai"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Max 3 Pilihan"
        android:textColor="#CC1C1C"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <CheckedTextView
        android:id="@+id/checkedTextKesehatan"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="129dp"
        android:layout_height="36dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="center"
        android:text=" + Kesehatan"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <CheckedTextView
        android:id="@+id/checkedTextPend"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="129dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="center"
        android:text=" + Pendidikan"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toEndOf="@+id/checkedTextKesehatan"
        tools:layout_editor_absoluteY="125dp" />

    <CheckedTextView
        android:id="@+id/checkedTextPolitik"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="129dp"
        android:layout_height="36dp"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="center"
        android:text=" + Politik"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/checkedTextPend"
        tools:layout_editor_absoluteY="182dp" />

    <CheckedTextView
        android:id="@+id/checkedTextKeuangan"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="129dp"
        android:layout_height="36dp"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="center"
        android:text=" + Keuangan"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/checkedTextPolitik"
        tools:layout_editor_absoluteY="233dp" />

    <CheckedTextView
        android:id="@+id/checkedTextDiri"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="129dp"
        android:layout_height="36dp"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="center"
        android:text=" + Pengembangan Diri"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/checkedTextKeuangan"
        tools:layout_editor_absoluteY="288dp" />

    <CheckedTextView
        android:id="@+id/checkedTextTeknologi"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="129dp"
        android:layout_height="36dp"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="center"
        android:text=" + Teknologi"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/checkedTextKesehatan"
        tools:layout_editor_absoluteY="182dp" />

    <CheckedTextView
        android:id="@+id/checkedTextSosbud"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="129dp"
        android:layout_height="36dp"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="center"
        android:text=" + Sosial Budaya"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/checkedTextKesehatan"
        tools:layout_editor_absoluteY="233dp" />

    <CheckedTextView
        android:id="@+id/checkedTextWirausaha"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="129dp"
        android:layout_height="36dp"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="center"
        android:text=" + Kewirausahaan"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/checkedTextSosbud"
        tools:layout_editor_absoluteY="288dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
